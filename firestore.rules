rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    // Supports anonymous authentication.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'clients' collection.
    // Any authenticated user can manage the client list.
    match /clients/{clientId} {
      allow read, write: if isSignedIn();
    }

    // Rules for the 'transactions' collection.
    // Any authenticated user can manage financial records.
    match /transactions/{transactionId} {
      allow read, write: if isSignedIn();
    }
    
    // Rules for the 'products' collection.
    // Any authenticated user can manage the product inventory.
    match /products/{productId} {
        allow read, write: if isSignedIn();
    }

    // Rules for the 'serviceOrders' collection.
    // Any authenticated user can manage service orders.
    match /serviceOrders/{serviceOrderId} {
        allow read, write: if isSignedIn();
    }
  }
}
